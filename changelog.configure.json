{
  "template": "#{{CHANGELOG}}",
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": [
        "feature",
        "feat"
      ]
    },
    {
      "title": "## 🧰 Maintenance",
      "labels": [
        "chore",
        "maintenance",
        "refactor"
      ]
    },
    {
      "title": "## 📝 Documentation",
      "labels": [
        "docs",
        "documentation"
      ]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": [
        "fix"
      ]
    },
    {
      "key": "tests",
      "title": "## 🧪 Tests",
      "labels": [
        "test"
      ]
    },
    {
      "title": "## 📦 Other",
      "labels": []
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test)(?:\\([^)]+\\))?!?:\\s*(.*)$",
      "on_property": "title",
      "target": "$1"
    }
  ]
}